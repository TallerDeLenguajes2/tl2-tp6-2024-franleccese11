@model Presupuesto;

@{
    ViewData["Title"] = "Crear Presupuesto";
}

<div class="container mt-5 mb-5">
    <h2 class="mb-3">Crear Presupuesto</h2>

    <form asp-controller="Presupuesto" asp-action="CrearPresupuesto" method="post">
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="NombreDestinatario" class="form-label">Nombre del destinatario:</label>
                <input type="text" name="NombreDestinatario" id="NombreDestinatario" class="form-control" required placeholder="Ingresa el nombre">
            </div>
        </div>

        <div class="d-flex gap-2">
            <a asp-controller="Presupuesto" asp-action="Index" class="btn btn-secondary">Cancelar</a>
            <button class="btn btn-success" type="submit">Guardar</button>
        </div>
    </form>
</div>
